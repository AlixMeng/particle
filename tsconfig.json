{
  "compilerOptions": {
    "outDir": "tsDist",
    "allowJs": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "experimentalDecorators": true
  },
  "include": ["tools/**/*", "source/**/*"],
  "exclude": ["node_modules", "dist", "tools/new-component"]
}
